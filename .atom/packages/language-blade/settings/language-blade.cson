'.text.html.php.blade':
  'editor':
    'increaseIndentPattern': '''(?x)
      # From language-html
      <(?!\\?|(?:area|base|br|col|frame|hr|html|img|input|link|meta|param)\\b|[^>]*/>)
      ([-_\\.A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*</\\1>)
      |<!--(?!.*-->)
      |<\\?php.+?\\b(if|else(?:if)?|for(?:each)?|while)\\b.*:(?!.*end\\2)
      |\\{[^}"\']*$
      # Blade specific
      |(?<![A-Za-z0-9_@])
       @
       (?:
        can
       |cannot
       |component
       |else
       |elsecan
       |elsecannot
       |elseif
       |empty
       |for
       |foreach
       |forelse
       |hasSection
       |if
       |push
       |slot
       |unless
       |verbatim
       |while
       )
       \\b
      |(?<![A-Za-z0-9_@])
       @(php|lang)\\b
       (?! # Not followed by
        [\\t ]*\\( # Single line @php ($expression)
       |.*(?<![A-Za-z0-9_@])@end\\3\\b # @endphp or @endlang on same line
       )
      |(?<![A-Za-z0-9_@])
       @section\\b
       (?! # Not followed by
        [\\t ]*\\('[^']*', # Comma after string argument
       )
    '''
    'decreaseIndentPattern': '''(?x)
      # From language-html
      ^\\s*
      (</(?!html)
        [-_\\.A-Za-z0-9]+\\b[^>]*>
        |-->
        |<\\?(php)?\\s+(else(if)?|end(if|for(each)?|while))
        |\\}
        # Blade specific
        |(?<![A-Za-z0-9_@])
         @
         (
          append
         |else
         |elsecan
         |elsecannot
         |elseif
         |empty
         |endcan
         |endcannot
         |endcomponent
         |endfor
         |endforeach
         |endforelse
         |endif
         |endlang
         |endphp
         |endpush
         |endsection
         |endslot
         |endunless
         |endverbatim
         |endwhile
         |overwrite
         |show
         |stop
         )
         \\b
      )
    '''
# Required because of .source.php HACK
'.support.function.construct.end.blade .source.php':
  'editor':
    'decreaseIndentPattern': '''
      (?x) # From language-php
      ^(.* \\*\\/)?\\s*
      # Blade specific
      (}|!!})
    '''
