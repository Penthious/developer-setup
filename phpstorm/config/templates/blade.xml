<templateSet group="blade">
  <template name="@section" value="@section($PARAMETERS$)&#10;    &#10;    $END$&#10;    &#10;@stop" description="section" toReformat="false" toShortenFQNames="true">
    <variable name="PARAMETERS" expression="" defaultValue="content" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
  <template name="@if" value="@if($PARAMETERS$)&#10;    $END$&#10;@endif" description="if statement" toReformat="false" toShortenFQNames="true">
    <variable name="PARAMETERS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="CSS" value="false" />
      <option name="OTHER" value="true" />
      <option name="CUCUMBER_FEATURE_FILE" value="false" />
      <option name="JSP" value="false" />
      <option name="SQL" value="false" />
      <option name="HTML" value="false" />
      <option name="TypeScript" value="false" />
      <option name="HAML" value="false" />
      <option name="CoffeeScript" value="false" />
      <option name="Twig" value="false" />
      <option name="PHP" value="false" />
      <option name="XML" value="false" />
      <option name="PHP String Literal" value="true" />
      <option name="JSON" value="false" />
      <option name="JAVA_SCRIPT" value="false" />
    </context>
  </template>
  <template name="@foreach" value="@foreach($/$PARAMETER$ as $/$KEY$ =&gt; $/$VALUE$)&#10;    &#10;@endforeach" description="foreach" toReformat="false" toShortenFQNames="true">
    <variable name="PARAMETER" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="KEY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>